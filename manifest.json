{
  "name": "Word Swap",
  "version": "1.0",
  "description": "My first extension",
  "permissions": ["storage"],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/your_image16.png",
      "32": "images/your_image32.png",
      "48": "images/your_image48.png",
      "128": "images/your_image128.png"
    }
  },
  "icons": {
    "16": "images/your_image16.png",
    "32": "images/your_image32.png",
    "48": "images/your_image48.png",
    "128": "images/your_image128.png"
  },
  "manifest_version": 2
}
